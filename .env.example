# API Keys for External Services
# Copy this file to .env and fill in your actual API keys

# TasteDive API for cultural recommendations
# Get your key at: https://tastedive.com/account/api_access
TASTEDIVE_API_KEY=your_tastedive_api_key_here

# Algolia API for fast search
# Get your keys at: https://www.algolia.com/account/api-keys
ALGOLIA_APP_ID=your_algolia_app_id_here
ALGOLIA_API_KEY=your_algolia_api_key_here

# Google Maps API for geographic data
# Get your key at: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Gemini API for response generation
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
MONGO_URI=mongodb://localhost:27017/taste_trails_korea

# Flask Configuration
SECRET_KEY=your_secret_key_for_sessions_change_this_in_production
FLASK_ENV=development

# Optional Service Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
API_REQUEST_TIMEOUT=10
MAX_RETRIES=3
DEFAULT_SEARCH_RADIUS=10000
MAX_SEARCH_RESULTS=20
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=60